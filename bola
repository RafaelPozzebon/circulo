
package bola;

import java.util.Scanner;

public class Bola {

   public static void main(String[] args) {
      double p;
      double r;
      double d;
      double a;
      Scanner ler = new Scanner(System.in);
      System.out.println("Insia o valor do Raio:");
      r = ler.nextInt();
      p = 2 * (Math.PI * r);
      a = Math.PI * (Math.pow(r, 2));
      d = 2 * r;
      System.out.println("Raio: " + r);
      System.out.println("Perímetro: " + p);
      System.out.println("Diâmetro: " + d);
      System.out.println("Área " + a);

   }
}
